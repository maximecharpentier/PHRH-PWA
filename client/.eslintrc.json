{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"plugin:react/recommended",
		"eslint:recommended"  
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"ignorePatterns": ["src/serviceWorker.js"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [0, "tab"],
		"quotes": [1, "single"],
		"no-unused-vars": [1],
		"react/no-unescaped-entities": [0],
		"react/prop-types": [0],
		"react/no-unknown-property": [0]
	}
}